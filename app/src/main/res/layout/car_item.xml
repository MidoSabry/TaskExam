<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:padding="2dp">

            <ImageView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/iv_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:srcCompat="@tools:sample/avatars" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/iv_movie"
                app:layout_constraintEnd_toEndOf="@+id/iv_movie"
                app:layout_constraintStart_toStartOf="@+id/iv_movie"
                app:layout_constraintTop_toTopOf="@+id/iv_movie" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:padding="2dp"
                android:textSize="20sp"
                tools:text="The Brand" />

            <TextView
                android:id="@+id/tv_release_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:padding="2dp"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                tools:text="2020" />


            <TextView
                android:id="@+id/tv_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:padding="2dp"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                tools:text="isUsed" />







        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>